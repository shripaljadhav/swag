<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                            
                                                           
           


    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="@dimen/dp90"
        android:layout_height="@dimen/dp120"
        android:layout_marginHorizontal="@dimen/dp8"
        android:layout_marginVertical="@dimen/dp8"
        android:orientation="vertical" android:tag="layout/item_search_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/pictures"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/transparant_light_gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/crush_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_1"         
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="dhoni" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crush_name"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/crush_age"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:tag="binding_2"                            
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="22" />

                <TextView
                    android:id="@+id/crush_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/dp5"
                    android:tag="binding_3"           
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="Male" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
         