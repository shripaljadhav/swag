<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/activity_create_address_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <include
            android:id="@+id/Edit_header"
            layout="@layout/common_header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Edit_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lay2"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp18"
                    android:layout_marginRight="@dimen/dp16"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_drawable"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp15">

                        <EditText
                            android:id="@+id/edittext_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/hint_name"
                            android:textSize="@dimen/sp15"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp18"
                        android:background="@drawable/profile_drawable"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp15">

                        <EditText
                            android:id="@+id/edittext_phone_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/phone_number"
                            android:textSize="@dimen/sp15"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp18"
                        android:background="@drawable/profile_drawable"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp15">

                        <EditText
                            android:id="@+id/edittext_alternate_phone_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/alternate_phone_number"
                            android:textSize="@dimen/sp15"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp18"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_pincode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/profile_drawable"
                            android:padding="@dimen/dp15"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/layout_use_my_location">

                            <EditText
                                android:id="@+id/edittext_pincode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="@string/pincode"
                                android:textSize="@dimen/sp15"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_use_my_location"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="@id/layout_pincode"
                            app:layout_constraintBottom_toBottomOf="@id/layout_pincode"
                            app:layout_constraintLeft_toRightOf="@id/layout_pincode"
                            app:layout_constraintRight_toRightOf="parent"
                            android:padding="@dimen/dp15"
                            android:layout_marginLeft="@dimen/dp16"
                            android:background="@drawable/ic_my_location">

                            <ImageView
                                android:id="@+id/imageview_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/textview_use_my_location"
                                android:src="@drawable/ic_location_v2"
                                app:layout_constraintHorizontal_chainStyle="packed"/>

                            <TextView
                                android:id="@+id/textview_use_my_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:text="@string/use_my_location"
                                android:textSize="@dimen/sp15"
                                android:textColor="@color/white"
                                android:layout_marginLeft="@dimen/dp5"
                                app:layout_constraintLeft_toRightOf="@id/imageview_location"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp18"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/profile_drawable"
                            android:paddingLeft="@dimen/dp8"
                            android:paddingRight="@dimen/dp8"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/layout_city"
                            app:layout_constraintTop_toTopOf="parent">

                            <EditText
                                android:id="@+id/spinner_state"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:gravity="center_vertical"
                                android:hint="@string/txt_state"
                                android:paddingLeft="8dp"
                                android:textSize="@dimen/sp15"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:spinner_divider_color="@color/colorDivider"
                                app:spinner_divider_show="true"
                                app:spinner_divider_size="0.4dp"
                                android:background="@null"
                                app:spinner_popup_animation="dropdown"
                                app:spinner_popup_background="@android:color/black"
                                app:spinner_popup_elevation="14dp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/ic_drop_down_arrow"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:visibility="gone"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp16"
                            android:background="@drawable/profile_drawable"
                            android:paddingLeft="@dimen/dp8"
                            android:paddingRight="@dimen/dp8"
                            app:layout_constraintLeft_toRightOf="@id/layout_state"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <EditText
                                android:id="@+id/spinner_city"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:gravity="center_vertical"
                                android:hint="@string/txt_city"
                                android:paddingLeft="8dp"
                                android:textSize="@dimen/sp15"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:spinner_divider_color="@color/colorDivider"
                                app:spinner_divider_show="true"
                                app:spinner_divider_size="0.4dp"
                                app:spinner_popup_animation="dropdown"
                                app:spinner_popup_background="@android:color/black"
                                app:spinner_popup_elevation="14dp"
                                android:background="@null"/>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/ic_drop_down_arrow"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:visibility="gone"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp18"
                        android:background="@drawable/profile_drawable"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp15">

                        <EditText
                            android:id="@+id/edittext_house_no_building_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/house_no_building_name"
                            android:textSize="@dimen/sp15"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp18"
                        android:background="@drawable/profile_drawable"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp15">

                        <EditText
                            android:id="@+id/edittext_road_name_area_colony"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/road_name_area_colony"
                            android:textSize="@dimen/sp15"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp18"
                        android:background="@drawable/profile_drawable"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp15">

                        <EditText
                            android:id="@+id/edittext_landmark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/landmark"
                            android:textSize="@dimen/sp15"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/btn_next"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp50"
                        android:layout_marginTop="@dimen/dp50"
                        android:background="@drawable/colorbtn"
                        android:backgroundTint="@color/dark_pink"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/save_address"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp15" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
         